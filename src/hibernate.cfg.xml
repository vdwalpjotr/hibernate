<!DOCTYPE hibernate-configuration SYSTEM
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/funda</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.dialect">
      org.hibernate.dialect.MySQL5Dialect</property>

    <!-- Use the C3P0 connection pool provider -->
    <property name="hibernate.c3p0.min_size">5</property>
    <property name="hibernate.c3p0.max_size">20</property>
    <property name="hibernate.c3p0.timeout">300</property>
    <property name="hibernate.c3p0.max_statements">50</property>
    <property name="hibernate.c3p0.idle_test_period">3000</property>

    <!-- Show and print nice SQL on stdout -->
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>

    <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
    <property name="current_session_context_class">thread</property>

    <!-- List of XML mapping files -->
    <mapping class="xml.LiggingEntity"/>
    <mapping class="xml.MkantoorEntity"/>
    <mapping class="xml.MkantoormdwEntity"/>
    <mapping class="xml.SoortbouwEntity"/>
    <mapping class="xml.SoortobjectEntity"/>
    <mapping class="xml.SoortvraagprijsEntity"/>
    <mapping class="xml.SoortwoningEntity"/>
    <mapping class="xml.StatusEntity"/>
    <mapping class="xml.TypewoningEntity"/>
    <mapping class="xml.WoEntity"/>
    <mapping class="xml.WoAdEntity"/>
    <mapping class="xml.WoDetailsEntity"/>
    <mapping class="xml.WoLiggingEntity"/>
    <mapping class="xml.AfspraakEntity"/>
    <mapping class="xml.UserEntity"/>

    <!--
    <mapping resource="nl/hanze/hibernate/fruit/Fruit.hbm.xml"/>
    <mapping resource="nl/hanze/hibernate/fruit/Category.hbm.xml"/>
    -->
  </session-factory>
</hibernate-configuration>
